<h3>Products</h3>
<% @products.each do |product| %>
  <div class="product">
    <h4><%= product.collection%></h4>
    <p><%= link_to product.title, product %> - <%= product.model%><br>
    <%= product.designer %>, <%= product.year %></p>
  </div>
  <p><%= link_to "Delete", product, :confirm => "Are you sure?", :method => :delete %></p>
  <hr>
<% end %>
<p><%= paginate @products %></p>
<p><%= link_to "Add a product", new_product_path %></p>
