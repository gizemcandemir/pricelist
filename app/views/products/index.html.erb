<h1>Products</h1>
<% @products.each do |product| %>
  <div class="product">
    <h3><%=product.collection%></h3>
    <p><%=product.title%> - <%= product.model%></p>
    <p><%=product.designer %>, <%=product.year %></p>
  </div>
  <p><%= link_to "Delete", @product, :confirm => "Are you sure?", :method => :destroy %></p>
<% end %>
<p><%= paginate @products %></p>
<p><%= link_to "Add a product", new_product_path %></p>
